<Window x:Class="WpfApp1.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="300">
    <Grid>
        <Label Content="Username: " HorizontalAlignment="Left" Margin="51,74,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="125,78,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Name="Username"/>
        <Label Content="Password: " HorizontalAlignment="Left" Margin="51,105,0,0" VerticalAlignment="Top"/>
        <PasswordBox HorizontalAlignment="Left" Margin="125,106,0,0" VerticalAlignment="Top" Width="120" Name="Password"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="51,136,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" IsDefault="True"/>

    </Grid>
</Window>
