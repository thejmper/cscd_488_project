<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Button Name="newCaseFile" Click="newCaseFile_Click" IsEnabled="False" >New Case file</Button>
            <Button Name="saveCaseFile" Click="saveCaseFile_Click" IsEnabled="False">Save Case File</Button>
            <Button Name="loadCaseFile" Click="loadCaseFile_Click">Load Case File</Button>
            <Button Content="Login" Width="75" Height="21" VerticalAlignment="Bottom" Click="Button_Click"/>
        </StackPanel>
        
        <ScrollViewer Name="scrollView" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Grid.Row="1">
            
            
        </ScrollViewer>
    </Grid>
</Window>
